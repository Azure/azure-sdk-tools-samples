<?xml version="1.0" encoding="utf-8"?>
<Azure SubscriptionName="{SUBSCRIPTION NAME}" ServiceName="{CLOUD SERVICE NAME}" StorageAccount="{STORAGE ACCOUNT}" Location="{LOCATION}" VNetName="SPVNet" AffinityGroup="SPVNet-AG">
  <ServiceAccounts>
  	<ServiceAccount UserName="SPAdmin" Password="{PASSWORD}" />
  </ServiceAccounts>
  <AzureVNet CreateVNET="true" NetworkConfigFileName="NetworkConfig.xml" />
  <AzureVMGroups>
    <VMRole Name="DomainControllers" StartingImageName="{WINDOWS SERVER 2012 IMAGE}" 
                  VMSize="Small" SubnetNames="DCSubnet" ServiceAccountName="SPAdmin" AvailabilitySet="DCSet" DataDiskSizesInGB="Data:20;Log:10">
      <AzureVM Name="DC1" DCType="NewForest" >
	  </AzureVM>
      <AzureVM Name="DC2" DCType="Replica" >
	  </AzureVM>
    </VMRole>    
  </AzureVMGroups>
  <ActiveDirectory Domain="CORP" DnsDomain="corp.contoso.com" >
  </ActiveDirectory>  
</Azure>