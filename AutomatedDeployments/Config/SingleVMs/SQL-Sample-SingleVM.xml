<?xml version="1.0" encoding="utf-8"?>
<Azure SubscriptionName="{SUBSCRIPTION NAME}" ServiceName="{SERVICE NAME}" StorageAccount="{STORAGE ACCOUNT}" VNetName="SPVNet" AffinityGroup="SPVNet-AG">
  <ServiceAccounts>
    <ServiceAccount UserName="SPAdmin" Password="{PASSWORD}" Type="WindowsLocal" Create="No" /><!--Account used to create VMs-->
    <ServiceAccount UserName="CORP\SPAdmin" Password="{PASSWORD}" Type="WindowsDomain" Create="No" /><!--Account used to connect to AD-->
    <ServiceAccount UserName="spdbaccess" Password="{PASSWORD}" Type="SQL" />
  </ServiceAccounts>
  <Connections>
    <ActiveDirectory Domain="CORP" DnsDomain="corp.contoso.com" DomainControllerVM="DC1" ServiceAccountName="CORP\SPAdmin" ServiceName="{AD SERVICE NAME}" />
  </Connections>
  <AzureVMGroups>
    <VMRole Name="SQLServers" StartingImageName="{SQL SERVER 2012 IMAGE NAME}" 
            VMSize="Small" DataDiskSizesInGB="Data:20;Log:10" DefaultSQLDataFolder="F:\Data" 
				DefaultSQLLogFolder="G:\Logs" SubnetNames="AppSubnet" ServiceAccountName="SPAdmin">
      <AzureVM Name="SQL1" />
    </VMRole>
  </AzureVMGroups>
  <SQLCluster Name="SQLStandalone"
              InstallerDomainUsername="CORP\SPAdmin"
              InstallerDatabaseUserName="spdbaccess"
              />
</Azure>